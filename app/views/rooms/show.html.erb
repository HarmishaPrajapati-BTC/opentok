<div class="page-header">
  <%= link_to rooms_path, class: 'btn btn-default' do %>
    All Rooms
  <% end %>
  <%= link_to edit_room_path(@room), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show room</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @room.name %></dd>
</dl>
<td><%= link_to 'Start recording', room_start_archive_path(@room), remote: true %></td>
<td><%= link_to 'Stop recording', room_stop_archive_path(@room), remote: true %></td>

<div id="videos"
     data-controller="vonage"
     data-vonage-api-key="47001474"
     data-vonage-session-id="<%= @room.vonage_session_id %>"
     data-vonage-token="<%= @token %>"
     data-vonage-name="<%= current_user.name %>"
     >
</div>
